				</div>
				<p class="name"></p>
				<div class="btn-actions">
					<button>Contratar</button>
					<button><i class="fa-regular fa-message"></i>Mandar mensagem</button>
					<button>Denunciar</button>
				</div>
			</section>
			<section id="info">
				<div class="contact">
					<h3>Informações de contato</h3>
					<div><p>Celular:</p><p class="phoneNumber"></p></div>
					<div><p>Email:</p><p class="email"></p></div>
				</div>
				<div>
					<h3>Sobre mim</h3>
					<p class="aboutMe"></p>
				</div>
				<div>
					<h3>Didática</h3>
					<p class="didactic"></p>
				</div>
				<div class="feedbacks">
					<h3>Avaliações</h3>
				</div>
			</section>
